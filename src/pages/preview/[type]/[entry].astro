---
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";
import Base from "../../../layouts/Base.astro";
import { CDN_SPACE_ID, CDN_TOKEN } from "astro:env/server";
import * as contentful from "contentful";
import type { Page } from "../../../content.config";

const client = contentful.createClient({
  space: CDN_SPACE_ID,
  accessToken: CDN_TOKEN,
});

const { entry } = Astro.params;

const response = await client.getEntry<contentful.EntrySkeletonType<Page>>(
  entry!
);
---

<Base
  title={response.fields.title}
  set:html={documentToHtmlString(response.fields.content as any)}
/>
