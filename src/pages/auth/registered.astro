---
import Container from "@/layouts/Container.astro";
---

<Container title="Registered">
  <section>
    <div class="flex flex-col items-center px-6 mx-auto md:h-screen lg:py-0">
      <div
        class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md md:p-0 dark:bg-gray-800 dark:border-gray-700"
      >
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
          <h1
            class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white"
          >
            Thanks for joining!
          </h1>
          <p class="text-gray-600 dark:text-gray-400">
            We've sent you an email to confirm your account. Please check your
            inbox.
          </p>
        </div>
      </div>
    </div>
  </section>
</Container>
