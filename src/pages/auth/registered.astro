---
import Container from "@/layouts/Container.astro";
---

<Container title="Registered">
  <section>
    <div class="mx-auto flex flex-col items-center px-6 md:h-screen lg:py-0">
      <div
        class="w-full rounded-lg bg-white shadow sm:max-w-md md:mt-0 md:p-0 dark:border dark:border-gray-700 dark:bg-gray-800"
      >
        <div class="space-y-4 p-6 sm:p-8 md:space-y-6">
          <h1
            class="text-xl leading-tight font-bold tracking-tight text-gray-900 md:text-2xl dark:text-white"
          >
            Thanks for joining!
          </h1>
          <p class="text-gray-600 dark:text-gray-400">
            We've sent you an email to confirm your account. Please check your
            inbox.
          </p>
        </div>
      </div>
    </div>
  </section>
</Container>
