---
import Container from "@/layouts/Container.astro";
import { CricketLeaderboard } from "@/components/CricketLeaderboard";

const season = new Date().getFullYear();
---

<Container title="Season Leaderboard">
  <div class="mx-auto max-w-4xl py-8">
    <h1
      class="mb-2 text-3xl font-bold"
      style="font-family: var(--font-secondary), serif;"
    >
      {season} Season Leaderboard
    </h1>
    <p class="mb-8 text-gray-600">
      Batting and bowling statistics for Percy Main CC players this season.
    </p>

    <CricketLeaderboard client:load season={season} />
  </div>
</Container>
