---
import type { Game } from "@/collections/game";
import priceConfig from "~/stripe.json";

type Props = {
  id: string;
  game: Game;
};

const { id, game } = Astro.props;
---

{
  game.hasSponsor ? (
    <p class="text-dark mt-2 justify-self-start rounded-sm bg-green-500 px-4 py-2 text-sm">
      Sponsor: {game.sponsor?.name ?? "Pending"}
    </p>
  ) : (
    <div class="mt-4 justify-self-start rounded-sm bg-blue-500 px-4 py-2 text-sm text-white hover:bg-blue-700">
      <a
        href={`/purchase/${priceConfig.prices.sponsorship}?metadata=${JSON.stringify({ gameId: id })}`}
      >
        Sponsor This Game
      </a>
    </div>
  )
}
