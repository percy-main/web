---
import { RichText } from "@/components/RichText";

type Props = {
  id: string;
  title: string;
  when: string;
  summary: string;
};

const { id, title, when, summary } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md border p-4 mb-4 h-full flex flex-col">
  <div>
    <div>
      <h2 class="text-lg font-semibold mb-1">{title}</h2>
      <p class="text-gray-500 text-sm">{when}</p>
    </div>
  </div>
  <p class="text-gray-700 mb-4">
    <RichText page="" document={summary} />
  </p>
  <div class="flex justify-end items-end mt-auto grow">
    <a href={`/news/article/${id}`} class="text-blue-500 font-semibold">
      Read More
    </a>
  </div>
</div>
