---
type Props = {
  id: string;
  label: string;
  required?: boolean;
  type?: astroHTML.JSX.HTMLInputTypeAttribute;
};

const { id, label, required, type = "text" } = Astro.props;
---

<div class="relative z-0 w-full mt-2 mb-5 group">
  <input
    type={type}
    name={id}
    id={id}
    class="w-full block text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer"
    placeholder=" "
    required={required}
  />
  <label
    for={id}
    class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-7 scale-75 top-3 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-7"
  >
    {label}
  </label>
</div>
