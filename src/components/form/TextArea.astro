---
type Props = astroHTML.JSX.InputHTMLAttributes & {
  id: string;
  label: string;
};

const { label, ...inputProps } = Astro.props;
---

<div class="relative z-0 w-full mb-5 group">
  <textarea
    {...inputProps}
    placeholder=" "
    name={inputProps.id}
    rows="4"
    class="w-full block text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-hidden focus:ring-0 focus:border-blue-600 peer"
  ></textarea>
  <label
    for={inputProps.id}
    class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-7 scale-75 top-3 origin-[0] peer-focus:start-0 peer-focus:rtl:translate-x-1/4 peer-focus:rtl:left-auto peer-focus:text-blue-600 dark:peer-focus:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-7"
  >
    {label}
  </label>
</div>
