---
import { Picture } from "astro:assets";
import pitchImg from "./pitch.png";
---

<section>
  <div class="relative">
    <Picture
      class="h-96 w-full object-cover md:h-[32rem]"
      src={pitchImg}
      formats={["avif", "webp"]}
      alt="The cricket pitch at Percy Main"
      priority
      loading="eager"
    />
    <div class="absolute inset-0 bg-gray-900 opacity-55"></div>
    <div class="absolute inset-0 flex flex-col items-center justify-center text-white">
      <div class="mx-auto max-w-(--breakpoint-xl) px-4 py-6 lg:px-6">
        <div class="mx-auto max-w-(--breakpoint-md) text-center">
          <h2
            class="text-h2 md:text-h1 mb-4 leading-tight font-extrabold tracking-tight text-white"
          >
            Sport For Everyone At The Main
          </h2>
          <p class="mb-8 text-balance text-lg md:text-xl text-white/90">
            Community cricket, football, boxing, and running in the heart of North Shields
          </p>
          <a
            href="/calendar"
            class="inline-block rounded-lg bg-cta px-8 py-3.5 text-lg font-medium text-white transition-colors hover:bg-cta-dark"
          >
            See What's On
          </a>
        </div>
      </div>
    </div>
    <!-- Stat bar -->
    <div class="absolute right-0 bottom-0 left-0 bg-black/40 backdrop-blur-sm">
      <div class="container flex items-center justify-center gap-6 py-3 text-sm text-white/90 md:gap-12 md:text-base">
        <span class="font-medium">4 Sports</span>
        <span class="text-white/40">|</span>
        <span class="font-medium">Est. 1860</span>
        <span class="text-white/40">|</span>
        <span class="font-medium">Registered Charity</span>
      </div>
    </div>
  </div>
</section>
